
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h2>Öne Çıkan Alanlar</h2>

<div class="container mt-4">
    <div class="row">
        <!-- Öne Çıkan 1 -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-primary text-white">
                    <h5>Yeni Kullanıcılar</h5>
                </div>
                <div class="card-body text-center">
                    <p>Bu hafta aramıza katılan yeni kullanıcıları keşfedin!</p>
                    <h2>@ViewBag.Username</h2>
                    <a href="/products/new" class="btn btn-primary">Detaylar</a>
                </div>
            </div>
        </div>

        <!-- Öne Çıkan 2 -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-success text-white">
                    <h5>En Çok Satanlar</h5>
                </div>
                <div class="card-body text-center">
                    <p>En son gelen mesajı keşfedin!</p>
                    <h2>@ViewBag.Message</h2>
                    <a href="/products/top-selling" class="btn btn-success">Detaylar</a>
                </div>
            </div>
        </div>

        <!-- Öne Çıkan 3 -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-danger text-white">
                    <h5>En son gelen açıklamayı keşfedin!</h5>
                </div>
                <div class="card-body text-center">
                    <p>Son açıklamalar burada!</p>
                    <h2>@ViewBag.Description</h2>
                    <a href="/offers" class="btn btn-danger">Detaylar</a>
                </div>
            </div>
        </div>
    </div>
</div>

