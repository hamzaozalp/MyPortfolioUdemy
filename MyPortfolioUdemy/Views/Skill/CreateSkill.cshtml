@model Skill
@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler Listesi</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenekleri Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">

							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Yetenek Değeri</label>
							<input type="text" asp-for="Value" class="form-control" />
							<br />
							<button class="btn btn-primary">Yeteneği Ekle</button>

						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>


